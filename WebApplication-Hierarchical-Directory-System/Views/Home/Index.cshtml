@using WebApplication_Hierarchical_Directory_System.Models;
@{
}
@model MyDirectory;
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

</head>

<body>
    <div>
        "Directory" - @Model.Title
    </div>
    <ul>
        @foreach (var subfolder in Model.Childrens)
        {
            <li>
                <a href="/@subfolder.Id">@subfolder.Title</a>
            </li>
        }
    </ul>
    <div>
        <form method="post" action="/getParent/@Model.Id">
            <button type="submit">Go Back</button>
        </form>
    </div>
    <div>
        <a href="/saveToFile">save json</a>
    </div>

</body>

</html>
