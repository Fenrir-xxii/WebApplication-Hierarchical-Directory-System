@using WebApplication_Hierarchical_Directory_System.Models;
@{
}
@model MyDirectory;
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body{
            font-size: 24px;
        }

        .margin-top{
            margin-top: 50px;
            font-size: 20px;
        }
    </style>
</head>

<body>
    <div>
        <h3>"Directory" - @Model.Title</h3>
    </div>
    <ul>
        @foreach (var subfolder in Model.Childrens)
        {
            <li>
                <a href="/@subfolder.Id">@subfolder.Title</a>
            </li>
        }
    </ul>
    <div>
        <form method="post" action="/getParent/@Model.Id">
            <button type="submit">Go Back</button>
        </form>
    </div>
    <div class="margin-top">
        Select file (.json):
        <form method="post" enctype="multipart/form-data" action="/loadDirectoryTree">
            <INPUT id="file" type="file" name="file" accept=".json">

            <button type="submit" class="btn btn-success">Load</button>
        </form>
    </div>


</body>

</html>
